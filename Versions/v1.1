@echo off

:: Get the directory of the batch file.
set BATCH_PATH=%~dp0

:: Set the name of your application.
set APP_NAME=24BD [v1.1].exe

:: Set the path for the shortcut.
set SHORTCUT_PATH=%APPDATA%\Microsoft\Windows\Start Menu\Programs\24BD [v1.1].lnk

:: Create the shortcut.
echo Creating shortcut...
powershell -command "$ws = New-Object -ComObject WScript.Shell; $s = $ws.CreateShortcut('%SHORTCUT_PATH%'); $s.TargetPath = '%BATCH_PATH%%APP_NAME%'; $s.Save()"

echo Shortcut created.
pause
